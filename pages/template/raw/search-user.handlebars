{{#each users as |user|}}
  <div
    class="user d-flex flex-row justify-content-between align-items-center w-100 pt-2 pb-2"
  >
    <div class="d-flex flex-row ms-4">
      <img
        src="{{user.ProfileIcon}}"
        height="100"
        width="100"
        alt=""
        class="rounded-circle profileIcon"
      />
      <div class="d-flex flex-column ms-3">
        <div class="display-6 displayName">
          <strong>{{user.DisplayName}}</strong>
        </div>
        <div class="username text-white-50 h3">
          {{user.Username}}
        </div>
      </div>
    </div>
    {{#if user.isFollowing}}
      <button class="btn bg-dark-subtle h-75 w-25 me-4">Unfollow</button>
    {{else}}
      <button class="btn bg-primary h-75 w-25 me-4">Follow</button>
    {{/if}}
  </div>
{{/each}}
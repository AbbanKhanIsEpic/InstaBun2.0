<div
  class="d-flex flex-column align-items-start justify-content-center w-100 mt-2 ms-2 mb-5"
>
  <div class="d-flex flex-row w-100">
    <div
      class="d-flex align-items-center position-relative searchBar ps-4 pe-4 pt-4 w-100"
    >
      <input class="form-control" type="text" id="searchPostInput" />
      <button type=" button" class="btn btn-primary ms-3" id="searchPostButton">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-search"
          viewBox="0 0 16 16"
        >
          <path
            d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"
          />
        </svg>
      </button>
      <button
        type="button"
        class="btn btn-primary ms-3"
        id="createCollectionButton"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-plus-square"
          viewBox="0 0 16 16"
        >
          <path
            d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"
          />
          <path
            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"
          />
        </svg></button>
    </div>
  </div>
</div>
<div
  id="collections"
  class="col w-100 overflow-x-hidden mb-5 overflow-y-auto h-auto"
>
  {{#each collections}}
    <div
      class="collection d-flex position-relative flex-column border-1 border"
      id="{{collectionID}}"
    >
      <h5>{{collectionTitle}}</h5>
      <img src="{{coverPhoto}}" alt="" />
    </div>
  {{/each}}
</div>
<div
  class="modal-dialog modal-dialog-centered modal-fullscreen modal-dialog-scrollable"
>
  <div class="modal-content bg-black text-white glassmorph">
    <div class="modal-header d-flex flex-column p-0 position-relative pb-4">
      <h5 id="modalTitle" class="modal-title pt-3">Story</h5>
      <button
        type="button"
        class="bg-transparent border-0 position-absolute end-0 pt-3 pe-3"
        data-bs-dismiss="modal"
        aria-label="Close modal"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="white"
          class="bi bi-x-lg"
          viewBox="0 0 16 16"
        >
          <path
            d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"
            stroke="white"
            stroke-width="1.5"
          />
        </svg>
      </button>
    </div>
    <div class="modal-body d-flex w-100 flex-row m-0 p-0">
      <div
        class="ms-3 d-flex justify-content-center border-end"
        id="postContainer"
      >
        <div
          class="d-flex align-items-center justify-content-center pe-3 position-relative"
        >
          {{#if isVideo}}
            <video
              controls
              preload="auto"
              class="rounded"
              width="100%"
              height="auto"
            >
              <source src="{{storyLink}}" type="video/mp4" />
              Your browser does not support the video tag.
            </video>
          {{else}}
            <img
              src="{{storyLink}}"
              class="border-1 border user-select-none content"
            />
          {{/if}}
        </div>
      </div>
      <div
        id="storyInformationContainer"
        class="d-flex flex-column w-100 mt-3 ms-3 me-3 position-relative"
      >
        <h3 class="mb-4 mt-4">Visibility:</h3>
        <div class="form-check d-flex align-items-center mb-2">
          <input
            class="form-check-input visibilityCheckBox"
            type="checkbox"
            value="0"
            id="uploadVisibilityAll"
           {{#isSameVisibility storyVisibility 0}}checked{{/isSameVisibility}}
          />
          <label
            class="form-check-label ms-2 mb-0 display-7"
            for="uploadVisibilityAll"
          >
            Everyone
          </label>
        </div>
        <div class="form-check d-flex align-items-center mb-2">
          <input
            class="form-check-input visibilityCheckBox"
            type="checkbox"
            value="1"
            id="uploadVisibilityFollowers"
            {{#isSameVisibility storyVisibility 1}}checked{{/isSameVisibility}}
          />
          <label
            class="form-check-label ms-2 display-7"
            for="uploadVisibilityFollowers"
          >
            Followers
          </label>
        </div>
        <div class="form-check d-flex align-items-center mb-2">
          <input
            class="form-check-input visibilityCheckBox"
            type="checkbox"
            value="2"
            id="uploadVisbilityFriends"
            {{#isSameVisibility storyVisibility 2}}checked{{/isSameVisibility}}
          />
          <label
            class="form-check-label ms-2 display-7"
            for="uploadVisbilityFriends"
          >
            Friends
          </label>
        </div>
        <div class="form-check d-flex align-items-center">
          <input
            class="form-check-input visibilityCheckBox"
            type="checkbox"
            value="3"
            id="uploadVisibilityNoOne"
            {{#isSameVisibility storyVisibility 3}}checked{{/isSameVisibility}}
          />
          <label
            class="form-check-label ms-2 display-7"
            for="uploadVisibilityNoOne"
          >
            No-one
          </label>
        </div>
        <hr class="invisible" />
      </div>
    </div>
    <div class="modal-footer d-flex w-100 flex-row">
      <button id="saveStoryButton" class="btn btn-primary">Save</button>
      <button id="deleteStoryButton" class="btn btn-danger">Delete</button>
    </div>
  </div>
</div>
<div class="col vh-100 w-100 d-flex flex-column overflow-y-auto overflow-x-hidden align-items-center">
  <div class="d-flex flex-column align-items-center w-100 mt-5">
    <h6><strong>Profile icon:</strong></h6>
    <div class="mt-2">
      <input type="file" accept="image/*" class="position-absolute visually-hidden" placeholder="Profile icon"
        id="changeProfileIconInput" aria-label="user upload files" />
      <label for="changeProfileIconInput" role="button">
        <img width="100" height="100" src="{{profileIcon}}" id="userProfileIcon" class="rounded rounded-circle" />
      </label>
    </div>
  </div>
  <div class="d-flex flex-row justify-content-center w-25 mt-4 input-group">
    <div class="input-group-prepend">
      <span class="input-group-text rounded-end-0" id="basic-addon1">Username:</span>
    </div>
    <input type="text" class="form-control noBoxShadow" placeholder="Username" id="usernameInput" aria-label="Username"
      disabled />
  </div>
  <div class="d-flex flex-row justify-content-center w-25 mt-5 input-group">
    <div class="input-group-prepend">
      <span class="input-group-text rounded-end-0">Display name:</span>
    </div>
    <input type="text" class="form-control noBoxShadow" placeholder="Display name" aria-label="Display name"
      id="displayNameInput" />
  </div>
  <div class="d-flex flex-column align-items-center w-25 mt-5 input-group">
    <h6 class="d-flex align-self-start"><strong>Bio: </strong></h6>
    <textarea name="Bio" id="bioInput" class="form-control noBoxShadow w-100 rounded-3" rows="3"></textarea>
  </div>
  <div class="mb-4">
    <h3 class="mb-4 mt-4">Direct message limit:</h3>
    <div class="form-check d-flex align-items-center mb-2">
      <input class="form-check-input visibilityCheckBox" type="checkbox" value="0" id="dmLimitAll" {{#isSameVisibility
        dmLimit 0}}checked{{/isSameVisibility}} />
      <label class="form-check-label ms-2 mb-0 display-7" for="dmLimitAll">
        Everyone
      </label>
    </div>
    <div class="form-check d-flex align-items-center mb-2">
      <input class="form-check-input visibilityCheckBox" type="checkbox" value="1" id="dmLimitFollowers"
        {{#isSameVisibility dmLimit 1}}checked{{/isSameVisibility}} />
      <label class="form-check-label ms-2 display-7" for="dmLimitFollowers">
        Followers
      </label>
    </div>
    <div class="form-check d-flex align-items-center mb-2">
      <input class="form-check-input visibilityCheckBox" type="checkbox" value="2" id="dmLimitClose" {{#isSameVisibility
        dmLimit 2}}checked{{/isSameVisibility}} />
      <label class="form-check-label ms-2 display-7" for="dmLimitClose">
        Friends
      </label>
    </div>
    <div class="form-check d-flex align-items-center">
      <input class="form-check-input visibilityCheckBox" type="checkbox" value="3" id="dmLimitNoone" {{#isSameVisibility
        dmLimit 3}}checked{{/isSameVisibility}} />
      <label class="form-check-label ms-2 display-7" for="dmLimitNoone">
        No-one
      </label>
    </div>
  </div>
  <div class="d-flex flex-row align-items-center w-25 input-group">
    <div class="input-group-prepend w-50">
      <span class="input-group-text form-check-label">2-step auth: </span>
    </div>
    <input type="checkbox" id="auth2SVEButton" class="ms-4 w-25 rounded rounded-3 form-check-input" {{#if
      is2StepEnabled}}checked{{/if}}>

  </div>
  <div class="d-flex flex-row align-items-center w-25 input-group mt-4 mb-2">
    <button class="btn btn-primary w-100" id="updateProfileButton">Save</button>
  </div>
</div>
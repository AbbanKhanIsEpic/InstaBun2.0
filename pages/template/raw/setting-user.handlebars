<div
  class="col vh-100 w-100 d-flex flex-column overflow-y-auto overflow-x-hidden align-items-center"
>
  <div class="d-flex flex-column align-items-center w-100 mt-5">
    <h6><strong>Profile icon:</strong></h6>
    <div class="mt-2">
      <input
        type="file"
        accept="image/*"
        class="position-absolute visually-hidden"
        placeholder="Profile icon"
        id="changeProfileIconInput"
        aria-label="user upload files"
      />
      <label for="changeProfileIconInput" role="button">
        <img
          width="100"
          height="100"
          src="{{profileIcon}}"
          id="userProfileIcon"
          class="rounded rounded-circle"
        />
      </label>
    </div>
  </div>
  <div class="d-flex flex-row justify-content-center w-25 mt-4 input-group">
    <div class="input-group-prepend">
      <span
        class="input-group-text rounded-end-0"
        id="basic-addon1"
      >Username:</span>
    </div>
    <input
      type="text"
      class="form-control noBoxShadow"
      placeholder="Username"
      id="usernameInput"
      aria-label="Username"
      disabled
    />
  </div>
  <div class="d-flex flex-row justify-content-center w-25 mt-5 input-group">
    <div class="input-group-prepend">
      <span class="input-group-text rounded-end-0">Display name:</span>
    </div>
    <input
      type="text"
      class="form-control noBoxShadow"
      placeholder="Display name"
      aria-label="Display name"
      id="displayNameInput"
    />
  </div>
  <div class="form-group d-flex flex-column align-items-center w-25 mt-4">
    <h6 for="email" class="mt-2 d-flex align-self-start"><strong>Email address:</strong></h6>
    <div class="input-group">
      <div class="input-group-prepend">
        <span
          class="input-group-text h-100 rounded-end-0"
          role="button"
          id="changeEmailVis"
        ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="gray"
            class="bi bi-eye-slash-fill"
            viewBox="0 0 16 16"
          >
            <path
              d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7 7 0 0 0 2.79-.588M5.21 3.088A7 7 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474z"
            />
            <path
              d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12z"
            />
          </svg></span>
      </div>
      <input
        type="password"
        class="form-control noBoxShadow"
        placeholder="Email address"
        aria-label="Email address"
        id="emailAddressInput"
      />
    </div>
  </div>
  <div class="d-flex flex-column align-items-center w-25 mt-5 input-group">
    <h6 class="d-flex align-self-start"><strong>Bio: </strong></h6>
    <textarea
      name="Bio"
      id="bioInput"
      class="form-control noBoxShadow w-100 rounded-3"
      rows="3"
    ></textarea>
  </div>
  <div
    class="d-flex flex-row justify-content-center w-25 mt-5 input-group"
  ></div>
  <div class="d-flex flex-row align-items-center w-25 input-group">
    <div class="input-group-prepend w-50">
      <span class="input-group-text rounded-end-0">2-step auth: </span>
    </div>
    <div class="btn btn-primary w-50" id="auth2SVEButton">{{#if
        2SVE
      }}On{{else}}Off{{/if}}</div>
  </div>
  <div class="d-flex flex-row align-items-center w-25 input-group mt-4 mb-2">
    <button class="btn btn-primary w-100">Save</button>
  </div>
</div>